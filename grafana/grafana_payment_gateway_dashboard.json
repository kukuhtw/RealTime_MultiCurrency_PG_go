{
  "id": null,
  "uid": "pgw-grpc-poc",
  "title": "Payment Gateway — gRPC PoC",
  "tags": ["payment-gateway", "grpc", "poc"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(up, job)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": {}
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Targets UP",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(up{job=~\"$job\"})",
          "legendFormat": "up",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      }
    },
    {
      "type": "timeseries",
      "title": "RPS (gRPC handled /s)",
      "id": 2,
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "datasource": "Prometheus",
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (job, grpc_service, grpc_method) (rate(grpc_server_handled_total{job=~\"$job\"}[$__interval]))",
          "legendFormat": "{{job}} • {{grpc_service}}/{{grpc_method}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error rate (%)",
      "id": 3,
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "fieldConfig": { "defaults": { "unit": "percentunit" }, "overrides": [] },
      "targets": [
        {
          "expr": "100 * (sum by (job) (rate(grpc_server_handled_total{job=~\"$job\",grpc_code!=\"OK\"}[$__interval])) / clamp_min(sum by (job) (rate(grpc_server_handled_total{job=~\"$job\"}[$__interval])), 1e-9))",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (gRPC server handling)",
      "id": 4,
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, job, grpc_service, grpc_method) (rate(grpc_server_handling_seconds_bucket{job=~\"$job\"}[$__interval])))",
          "legendFormat": "{{job}} • {{grpc_service}}/{{grpc_method}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Payments outcome (approved vs denied)",
      "id": 5,
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (job) (rate(payments_approved_total{job=~\"$job\"}[$__interval]))",
          "legendFormat": "{{job}} • approved/s",
          "refId": "A"
        },
        {
          "expr": "sum by (job) (rate(payments_denied_total{job=~\"$job\"}[$__interval]))",
          "legendFormat": "{{job}} • denied/s",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Wallet ops (debit & credit /s)",
      "id": 6,
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (job) (rate(wallet_debit_total{job=~\"$job\"}[$__interval]))",
          "legendFormat": "{{job}} • debit/s",
          "refId": "A"
        },
        {
          "expr": "sum by (job) (rate(wallet_credit_total{job=~\"$job\"}[$__interval]))",
          "legendFormat": "{{job}} • credit/s",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    }
  ]
}
